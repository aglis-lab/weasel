#version 430 core

layout (local_size_x = 10) in;

layout (binding = 0) readonly buffer InVal
{
    int data[10];
} inVal;

layout (binding = 1) writeonly buffer OutVal
{
    int data[10];
} outVal;

void main()
{
    uint id = gl_LocalInvocationID.x;

    outVal.data[id] = inVal.data[id] * inVal.data[id];
}
